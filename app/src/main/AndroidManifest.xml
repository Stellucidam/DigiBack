<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.heigvd.digiback">
    <!-- Permissions -->
    <permission-group
        android:name="ch.heigvd.digiback.permission-group.CUSTOM_PERMISSION"
        android:description="@string/permission_description"
        android:label="@string/permission_label"
        android:protectionLevel="dangerous" />

    <permission
        android:name="ch.heigvd.digiback.permission.USE_CONDITIONS"
        android:description="@string/permission_description"
        android:label="@string/permission_label"
        android:permissionGroup="ch.heigvd.digiback.permission-group.CUSTOM_PERMISSION"
        android:protectionLevel="dangerous" />

    <uses-permission
        android:name="android.permission.INTERNET"
        android:usesCleartextTraffic="true"
        tools:targetApi="m" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="ch.heigvd.digiback.permission.USE_CONDITIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.sensor.stepcounter" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_digiback_small"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_digiback_small"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".ui.activity.exercise.ExerciseActivity"></activity>
        <activity
            android:name=".ui.activity.login.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity
            android:name=".ui.activity.mobility.MobilityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar">

            <!-- Todo : put that back -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
            Todo : remove that
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
    </application>

</manifest>