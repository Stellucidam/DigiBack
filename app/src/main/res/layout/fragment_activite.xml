<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activite.ActiviteFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/activity_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:contentPadding="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:id="@+id/linear_calendar"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/text_date"
                    android:text="Vendredi 12 mars 2021"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TableLayout
                    android:stretchColumns="*"
                    android:id="@+id/calendar_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TableRow
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="0"
                            android:text="L"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewL"/>
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="1"
                            android:text="M"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewM"/>
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="2"
                            android:text="M"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewMe"/>
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="3"
                            android:text="J"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewJ"/>
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="4"
                            android:text="V"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewV"/>
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="5"
                            android:text="S"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewS"/>
                    <TextView
                            android:textAlignment="center"
                            android:layout_column="6"
                            android:text="D"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/textViewD" />
                </TableRow>
                <TableRow
                        android:gravity="center"
                        android:stretchColumns="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="7">
                    <TextView
                            android:textAlignment="center"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day1"/>
                    <TextView
                            android:textAlignment="center"
                            android:text="9"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day2"/>
                    <TextView
                            android:textAlignment="center"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day3"/>
                    <TextView
                            android:textAlignment="center"
                            android:text="11"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day4"/>
                    <TextView
                            android:textAlignment="center"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day5"/>
                    <TextView
                            android:textAlignment="center"
                            android:text="13"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day6"/>
                    <TextView
                            android:textAlignment="center"
                            android:text="14"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/text_Day7"/>
                </TableRow>
            </TableLayout>
            <androidx.cardview.widget.CardView
                    android:id="@+id/activity_card_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    app:contentPadding="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/calendar_table"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                        android:text="This is an accomplishment"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewL"
                        tools:layout_editor_absoluteY="325dp"
                        tools:layout_editor_absoluteX="219dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
